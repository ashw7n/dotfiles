alias ps1a="export PS1='\$ '"
alias ps1b="export PS1='\d \h \$ '"
alias ps1c="export PS1='\u @ \W $ '"

alias p="pwd"
alias python="python3.8"

alias nrepl="clojure -Sdeps '{:deps {repl/nrepl {:mvn/version "LATEST"}}}' -m nrepl.cmdlinen"

function bbnrepl() {
  local port="${1:-5678}"
  echo "$port" > .nrepl-port
  bb --nrepl-server "$port"
}

function tester() {
  echo ">> \$0=$(dirname $0)"
}

#Just capturing how lein has to be installed
# (todo): move to another file
function _install_lein_raw {
  sudo mkdir -p /opt
  curl -O https://raw.githubusercontent.com/technomancy/leiningen/stable/bin/lein
  sudo mv lein /opt/
  sudo chmod a+x /opt/lein
  sudo mkdir -p $HOME/.lein
  sudo
}

